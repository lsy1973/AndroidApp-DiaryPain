<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/homeimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/img_note"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click the button below to set a alarm, we will send you a reminder 2 minutes before the set time."
        android:textColor="#000000"/>
    <Button
        android:id="@+id/timeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to Set Time Alarm"
        android:backgroundTint="#00ACC1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pain Intensity Level: (level 10 represents the highest level)"
        android:textColor="#000000"
        android:layout_marginTop="5dp"/>
    <Spinner
        android:id="@+id/spinner_painlevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/painlevel_list" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pain Location:"
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>
    <Spinner
        android:id="@+id/spinner_painlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/painlocation_list"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mood Level: "
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>
    <Spinner
        android:id="@+id/spinner_moodlevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Steps Goal:"
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/tv_stepsgoal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_edit"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Steps Taken:"
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/tv_stepstaken"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_edit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/saveButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#8C9EFF"/>

        <View
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#FF9E80"/>
        <View
            android:layout_width="10dp"
            android:layout_height="1dp" />

    </LinearLayout>
</LinearLayout>