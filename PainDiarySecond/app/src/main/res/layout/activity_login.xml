<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="230dp"
        android:layout_height="229dp"
        android:layout_gravity="center"
        android:background="@drawable/loginimage" />

    <EditText
        android:id="@+id/et_useremail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Please type Useremail"
        android:drawableLeft="@drawable/email"
        android:background="@drawable/shape_edit"
        android:drawablePadding="15dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="13dp"
        android:drawableLeft="@drawable/key"
        android:drawablePadding="15dp"
        android:background="@drawable/shape_edit"
        android:hint="Please type Password"
        android:inputType="textPassword" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show/hide password"
            android:textColor="#000000"
            android:layout_marginLeft="200dp"/>

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv3"
            android:paddingLeft="10dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#69F0AE"
        android:text="Login" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EA80FC"
        android:text="Register" />

    <TextView
        android:id="@+id/resetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot your password? "
        android:layout_marginLeft="200dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/direct_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="direct enter mainactivity"
        android:backgroundTint="#1E88E5"/>
</LinearLayout>