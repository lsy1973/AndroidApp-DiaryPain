<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/homeimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/haha1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/homeimg"
            android:text="Weather information:"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/tvWeather"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/haha1"
            android:layout_toRightOf="@id/homeimg"
            android:text="Weather information"
            android:paddingLeft="10dp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pain Intensity Level:"
        android:layout_marginTop="10dp"/>
    <Spinner
        android:id="@+id/spinner_painlevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/painlevel_list"
/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pain Location:"
        android:layout_marginTop="10dp"/>
    <Spinner
        android:id="@+id/spinner_painlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/painlocation_list" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mood Level:"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:id="@+id/spinner_moodlevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Steps Goal:"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_stepsgoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="default goal is 10000" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/editButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Edit" />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Time Alarm"
        android:layout_marginTop="10dp"/>

</LinearLayout>